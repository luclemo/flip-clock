@import "_reset"

html
	font-size 12px
	
	@media screen and (max-width: 1020px)
		font-size 9px
		
	@media screen and (max-width: 840px)
		font-size 8px
		
	@media screen and (max-width: 760px)
		font-size 6px
		
	@media screen and (max-width: 480px)
		font-size 5px
		
	@media screen and (max-width: 380px)
		font-size 4px
		
body
	color rgba(208, 208, 208, 1)
	font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
	line-height 1
	background radial-gradient(ellipse at center, rgba(239,242,220,0.5) 0%, rgba(227,230,209,1) 50%, rgba(216,219,199,1) 100%)
	
.wrapper
	max-width 1000px
	height 100vh
	margin 0 auto
	display flex
	justify-content center
	align-items center

.clock
	width 100%
	display flex
	justify-content center
	align-items center
		
	@media screen and (max-width: 1020px)
		width 80%

	@media screen and (max-width: 700px)
		width 90%
		
	@media screen and (max-width: 420px)
		width 100%
	
// -------------------------
// Numbers
// -------------------------
	
.number-box
	text-align center
	width 40%
	padding 3rem 2rem 6rem 2rem
	margin-right 2%
	border-radius 10px
	background: rgba(22, 22, 22, 1)
	position relative
	
	@media screen and (max-width: 380px)
		padding 1rem 1rem 6rem 1rem
		line-height 1.3
    
	@media screen and (max-width: 760px)
		padding-bottom 8rem
	
	&:last-child
		margin 0

	&:after
	&:before
		content ''
		width 100%
		display block
		position absolute
		left 0
		top 49%
		
	&:after
		height 3px
		background rgba(15,15,15,1)
	  
  &:before
		height 50%
		background linear-gradient(to top, rgba(255,255,255,0) 0%, rgba(255,255,255,0.04) 100%)
		border-radius: 0 0 10px 10px
		    
.number
	font-size 22rem
	line-height 1.2
	text-shadow 0px 2px 2px rgba(0,0,0,0.7)
	position relative
	bottom -14px

// -------------------------
// AM & PM
// -------------------------

.ampm
	position relative

.am
.pm
	font-size 1.6rem
	text-transform uppercase
	color rgba(255, 255, 255, 0.5)
	position: absolute
	
	@media screen and (max-width: 1020px)
		font-size 1.8rem
		
	@media screen and (max-width: 760px)
		font-size 2.3rem
		
	@media screen and (max-width: 760px)
		font-size 2.6rem

.am
	top -10px
	left 0px
	
	@media screen and (max-width: 760px)
		top 0
		
	@media screen and (max-width: 380px)
		top 6px
		left 7px

.pm
	top 336px
	left 0px
	
	@media screen and (max-width: 1020px)
		top 260px
		
	@media screen and (max-width: 840px)
		top 232px
		
	@media screen and (max-width: 760px)
		top 160px
		
	@media screen and (max-width: 480px)
		top 136px
		
	@media screen and (max-width: 380px)
		top 120px
		left 7px